<launch>
  <node pkg="tf" type="static_transform_publisher" name="lidar_broadcaster" args="0 0 0.1 0 0 0 base_link laser_frame 100" />
  <!-- iRobotControl Node
  <node name="iRobotControl"          pkg="irobot"  type="iRobotListener.py" output="screen">
  </node>
  -->
  <!-- RpLidar Sender Node 
  <node name="rpLidarSendNode"          pkg="irobot"  type="laserDataSender.py" output="screen">
  </node>
  -->
  <!-- Odom Sender Node
  <node name="odomSendNode"          pkg="irobot"  type="odomDataSender.py" output="screen">
  </node>
  -->
  <!-- TF Sender Node
  <node name="tfSendNode"          pkg="irobot"  type="tfDataSender.py" output="screen">
  </node>
  -->
  <!-- Static TF Sender Node
  <node name="tfStaticSendNode"          pkg="irobot"  type="tfStaticDataSender.py" output="screen">
  </node>
  -->
  <!-- iRobot Driver Node -->
  <arg name="config" default="$(find ca_driver)/config/default.yaml"/>
  <arg name="desc" default="true"/>
  <node name="ca_driver" pkg="ca_driver" type="ca_driver" output="screen">
    <rosparam command="load" file="$(arg config)"/>
    <param name="robot_model" value="CREATE_2"/>
   <!-- <remap from="odom" to="odom0" /> -->
  </node>
  <!-- Robot description -->
  <include if="$(arg desc)" file="$(find ca_description)/launch/create_2.launch"/>
  <!-- Sweep Lidar description -->

<!-- run sweep_node node -->
    <node name="sweep_node"          pkg="sweep_ros"  type="sweep_node" output="screen">
            <param name="serial_port"         type="string" value="/dev/ttyUSB1"/>
            <param name="serial_baudrate"     type="int"    value="115200"/>
            <param name="frame_id"            type="string" value="laser_frame"/>
    </node>

    <!-- run pointcloud_to_laserscan node -->
    <node pkg="pointcloud_to_laserscan" type="pointcloud_to_laserscan_node" name="pointcloud_to_laserscan">

        <remap from="cloud_in" to="pc2"/>
        <rosparam>
            target_frame: laser_frame # Leave disabled to output scan in pointcloud frame
            transform_tolerance: 0.01
            min_height: -1.0
            max_height: 1.0

            angle_min: -3.14 # -M_PI/2
            angle_max: 3.14 # M_PI/2
            angle_increment: 0.01 # M_PI/360.0
            scan_time: 0.5
            range_min: 0.0
            range_max: 40.0
            use_inf: true

            # Concurrency level, affects number of pointclouds queued for processing and number of threads used
            # 0 : Detect number of cores
            # 1 : Single threaded
            # 2->inf : Parallelism level
            concurrency_level: 1
        </rosparam>

    </node>





</launch>
